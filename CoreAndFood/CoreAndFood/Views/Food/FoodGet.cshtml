@model CoreAndFood.Data.Models.Food
@{
    ViewData["Title"] = "FoodGet";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Food Add Page</h1>
<br />
@using(Html.BeginForm("FoodUpdate","Food",FormMethod.Post))
{
    @Html.Label("Food Id")
    @Html.TextBoxFor(x=>x.FoodID,new {@class="form-control"})<br />
    @Html.Label("Food Name")
    @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})<br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x=>x.Stock,new {@class="form-control"})<br />
    @Html.Label("Price")
    @Html.TextBoxFor(x=>x.Price,new {@class="form-control"})<br />
    @Html.Label("Image URL")
    @Html.TextBoxFor(x=>x.ImageURL,new {@class="form-control"})<br />
    @Html.Label("Category")
    @*@Html.TextBoxFor(x=>x.CategoryID,new {@class="form-control"})<br />*@
    @Html.DropDownListFor(x=>x.CategoryID, (List<SelectListItem>)ViewBag.v1,new{@class="form-control"})<br />
    @Html.Label("Description")
    @Html.TextAreaFor(x=>x.Description,new {@class="form-control"})<br />
    <br />
    <button class="btn btn-primary">Save</button>
}

